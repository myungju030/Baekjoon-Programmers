// 콜라츠 추측
function solution(num) {
    var answer = 0;
    if(num===1)return 0;
    else{
        while(true){
            if(num%2===0) {num = num / 2; answer++;}
            else{ num = num*3+1; answer++;}
            
            if(num === 1)return answer;
            else if(answer===500) return -1
        }
    }

}